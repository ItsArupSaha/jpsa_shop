rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read data (e.g., for server-side rendering)
    match /{document=**} {
      allow read: if true;
    }
    
    // Only allow authenticated users to write, update, or delete data
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}